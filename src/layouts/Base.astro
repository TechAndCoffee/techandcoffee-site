---
import type { NavBar } from "./types";
import type { PageInfo } from "./types";

const links = (await Astro.glob("../data/navbar.json"))[0].default;
const { title, description } = Astro.props as PageInfo;
import { SEO } from "astro-seo";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="apple-touch-icon" sizes="57x57" href="/apple-icon-57x57.png" />
		<link rel="apple-touch-icon" sizes="60x60" href="/apple-icon-60x60.png" />
		<link rel="apple-touch-icon" sizes="72x72" href="/apple-icon-72x72.png" />
		<link rel="apple-touch-icon" sizes="76x76" href="/apple-icon-76x76.png" />
		<link
			rel="apple-touch-icon"
			sizes="114x114"
			href="/apple-icon-114x114.png"
		/>
		<link
			rel="apple-touch-icon"
			sizes="120x120"
			href="/apple-icon-120x120.png"
		/>
		<link
			rel="apple-touch-icon"
			sizes="144x144"
			href="/apple-icon-144x144.png"
		/>
		<link
			rel="apple-touch-icon"
			sizes="152x152"
			href="/apple-icon-152x152.png"
		/>
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/apple-icon-180x180.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="192x192"
			href="/android-icon-192x192.png"
		/>
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png"
		/>
		<link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png"
		/>
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png"
		/>
		<link rel="manifest" href="/manifest.json" />
		<meta name="msapplication-TileColor" content="#ffffff" />
		<meta name="msapplication-TileImage" content="/ms-icon-144x144.png" />
		<meta name="theme-color" content="#ffffff" />
		<meta name="generator" content={Astro.generator} />
		<SEO
			title={title}
			description={description}
			openGraph={{
				basic:{
					title: "Tech & Coffee â€“ the original \"and Coffee\" hangout",
					type: "website",
					image: "https://techandcoffee.info/images/tac_logo_hires.webp"
				},
				image:{
					alt:"The Tech & Coffee logo",
					type:"image/webp",
					width:2000,
					height:1700
				}
			}}
			twitter={
				{
					card:"summary",
					site:"@techandcoffee1",
					creator:"@techandcoffee1"
				}
			}
			extend={{
				meta: [
					{
						name: "twitter:image",
						content: "https://techandcoffee.info/images/tac_logo_hires.webp"
					},
					{
						name: "twitter:image:alt",
						content: "The Tech & Coffee logo"
					}
				]
			}}
		/>
	</head>
	<body class="dark:bg-neutral-800 dark:text-white min-h-screen bg-white-900 w-full sm:w-3/5 xl:w-4/5 max-w-screen-lg mx-auto px-5 pb-0 sm:pb-5">
			<a tabindex="0" class="absolute -translate-y-full transform focus:translate-y-0 h-10 p-2 bg-blue-700 text-white" href="#main">Skip to content</a>
		<header class="text-center py-10 mb-2.5 text-sm font-semibold">
			<nav
				class="flex flex-col items-center border-b border-blue-700 mb-5 pb-2.5 text-xs md:text-lg"
			>
				<ul class="flex gap-3 md:gap-5 flex-1 items-center">
					{links.map((link: NavBar) =>
					<li><a class="hover:underline hover:text-blue-900 dark:hover:text-blue-500" href={link.route}>{link.name}</a></li>
					)}
				</ul>
			</nav>
		</header>
		<main id="main">
			<slot />
		</main>
	</body>
</html>
